{
    "name": "st693ava/filament-email-manager",
    "description": "A comprehensive email management package for Filament v4 with SMTP servers, templates, and advanced features",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pedro Saraiva",
            "email": "pedro@st693ava.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "laravel/framework": "^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0",
        "orchestra/testbench": "^9.0",
        "orchestra/workbench": "^1.0",
        "nunomaduro/collision": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "St693ava\\FilamentEmailManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "St693ava\\FilamentEmailManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "St693ava\\FilamentEmailManager\\FilamentEmailManagerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}